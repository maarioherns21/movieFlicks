<%- include('../partials/header') %>
<main class="px-4">
  <br /><br />
  <h1 class="featurette-heading">All Movies</h1>
  <br />
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% movies.forEach(function(m) { %>
    <div class="col">
      <div class="album py-5">
        <div class="container">
          <div class="col">
            <div class="card shadow-sm">
              <image src="<%= m.url %> " height="400"></image>
              <div class="card-body">
                <h4 class="card-text"><%= m.movieName %></h4>
                <br>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="/movies/<%= m._id %>"
                      ><button
                        type="button"
                        class="btn btn-sm btn-outline-secondary"
                      >
                        Details
                      </button></a
                    >
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Edit
                    </button>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) ; %>
  </div>
</main>
<%- include('../partials/footer') %>
